@model List<UserViewModel>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "_adminLayout";
}
<div class="container" style="margin-top: 20px">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
